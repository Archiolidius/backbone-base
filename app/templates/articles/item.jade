.pull-left
  .media-object.avatar(style='background-image: url(#{user.avatar(avatar)})')
.media-body
  h4.media-heading #{title}
  i
    | Author: #{name}
  button.close(type='button' aria-hidden='true')
    | &times;
  p
    | #{text}
  .article-navigation
    a(href=routes.articlesShowPath(page, id)) More &raquo;
    span.comments-count Comments: #{comments_count}
